
<%- films = Film.all %>
<%- @images = Array.new %>

<%- films.each do |film| %>
<%- newsitems = film.newsitems %>
<%-  newsitems.each do |item| %>
	<h1> <%= item.news_title %> </h1>
	<h2> <%= film.film_title %> </h2>
	<h3> <%= item.images 	 %> </h3>
<%-   @images += item.images %>

<%  end %>
<% end %>